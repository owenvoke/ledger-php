{
    "name": "pxgamer/ledger-php",
    "type": "library",
    "description": "A PHP interface for the Ledger Wallet API.",
    "license": "MIT",
    "require": {
        "php": "^7.2",
        "guzzlehttp/guzzle": "^6.3",
        "tightenco/collect": "^5.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.0 || ^8.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "pxgamer\\Ledger\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "pxgamer\\Ledger\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests"
    }
}
